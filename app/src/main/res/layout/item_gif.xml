<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/gif_margin">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gif_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gif_in_list_size"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/button_play_gif"
            android:layout_width="@dimen/play_gif_button_size"
            android:layout_height="@dimen/play_gif_button_size"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/play_gif_button"/>
    </FrameLayout>
</android.support.v7.widget.CardView>

